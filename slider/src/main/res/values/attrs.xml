<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SliderThemes">
        <attr name="slider_Style" format="reference" />
        <attr name="slider_PagerIndicatorStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="SliderLayout">
        <!-- indicator visibility -->
        <attr name="slider_indicator_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
        <!-- auto play -->
        <attr name="slider_auto_cycle" format="boolean" />
        <!-- page animation -->
        <attr name="slider_pager_animation" format="enum">
            <enum name="Default" value="0">Default</enum>
            <enum name="Accordion" value="1">Accordion</enum>
            <enum name="Background2Foreground" value="2">Background2Foreground</enum>
            <enum name="CubeIn" value="3">CubeIn</enum>
            <enum name="DepthPage" value="4">DepthPage</enum>
            <enum name="Fade" value="5">Fade</enum>
            <enum name="FlipHorizontal" value="6">FlipHorizontal</enum>
            <enum name="FlipPage" value="7">FlipPage</enum>
            <enum name="Foreground2Background" value="8">Foreground2Background</enum>
            <enum name="RotateDown" value="9">RotateDown</enum>
            <enum name="RotateUp" value="10">RotateUp</enum>
            <enum name="Stack" value="11">Stack</enum>
            <enum name="Tablet" value="12">Tablet</enum>
            <enum name="ZoomIn" value="13">ZoomIn</enum>
            <enum name="ZoomOutSlide" value="14">ZoomOutSlide</enum>
            <enum name="ZoomOut" value="15">ZoomOut</enum>
        </attr>
        <!-- page animation time span -->
        <attr name="slider_pager_animation_span" format="integer" />
    </declare-styleable>

    <declare-styleable name="SliderPagerIndicator">
        <!-- indicator visibility -->
        <attr name="slider_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
        <!-- -->
        <attr name="slider_shape" format="enum">
            <enum name="oval" value="0" />
            <enum name="rect" value="1" />
        </attr>
        <!-- -->
        <attr name="slider_selected_color" format="color" />
        <attr name="slider_unselected_color" format="color" />
        <!-- indicator style -->
        <attr name="slider_selected_drawable" format="reference" />
        <attr name="slider_unselected_drawable" format="reference" />
        <!-- -->
        <attr name="slider_selected_width" format="dimension" />
        <attr name="slider_selected_height" format="dimension" />
        <!-- -->
        <attr name="slider_unselected_width" format="dimension" />
        <attr name="slider_unselected_height" format="dimension" />
        <!-- -->
        <attr name="slider_padding_left" format="dimension" />
        <attr name="slider_padding_right" format="dimension" />
        <attr name="slider_padding_top" format="dimension" />
        <attr name="slider_padding_bottom" format="dimension" />
        <!-- -->
        <attr name="slider_selected_padding_left" format="dimension" />
        <attr name="slider_selected_padding_right" format="dimension" />
        <attr name="slider_selected_padding_top" format="dimension" />
        <attr name="slider_selected_padding_bottom" format="dimension" />
        <!-- -->
        <attr name="slider_unselected_padding_left" format="dimension" />
        <attr name="slider_unselected_padding_right" format="dimension" />
        <attr name="slider_unselected_padding_top" format="dimension" />
        <attr name="slider_unselected_padding_bottom" format="dimension" />
    </declare-styleable>
</resources>